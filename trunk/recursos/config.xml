<?xml version='1.0' encoding='utf-8'?>
<widget id="es.octopusapp.cli" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Octopus</name>
    <description>
        App para realizar tests de oposiciones y de otros tipos; incluye tienda de tests organizada por materias, estadísticas de tus avances, méritos...
    </description>
    <author email="8ctopusapp@gmail.com" href="http://www.octopusapp.es">Carrón Sisters </author>
    <content src="lnk/index.html" />
    <access origin="*" />
    

    <feature name="InAppBrowser">
	    <param name="android-package" value="org.apache.cordova.InAppBrowser" />
	</feature>

    <preference name="webviewbounce" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
</widget>

